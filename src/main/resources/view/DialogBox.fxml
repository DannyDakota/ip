<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="TOP_RIGHT" fillHeight="false" prefWidth="280.0"
         type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="dialog" alignment="CENTER" style="-fx-background-color: #66cd00;
        -fx-background-radius: 15; -fx-border-color: white; -fx-border-radius: 15; -fx-label-padding: 5;
         -fx-max-height: 400; -fx-max-width: 400;" text="Label" textFill="#58526b" wrapText="true">
            <font>
                <Font name="Copperplate" size="13.0" />
            </font></Label>
        <ImageView fx:id="displayPicture" blendMode="DARKEN" fitHeight="100.0" fitWidth="107.0" pickOnBounds="true" smooth="false" />
    </children>
    <padding>
        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
    </padding>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
</fx:root>
